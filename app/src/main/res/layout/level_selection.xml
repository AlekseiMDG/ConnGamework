<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/grass"
    tools:context="com.example.oblojka.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="25dp">
        
            <RelativeLayout
                android:id="@+id/setTxtLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/imgOne"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow" />

                <TextView
                    android:id="@+id/imgTwo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/imgOne"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow" />

                <TextView
                    android:id="@+id/imgThree"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/imgTwo"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/imgFore"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/imgOne"
                    android:layout_margin="10dp"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/imgFive"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/imgTwo"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/imgFore"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/imgSix"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/imgThree"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/imgFive"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/imgSeven"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/imgFore"
                    android:layout_margin="10dp"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/imgEigh"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/imgFive"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/imgSeven"
                    android:background="#7000"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Yelow"
                    android:typeface="normal" />
            </RelativeLayout>
       
    </ScrollView>

    <TextView
        android:id="@+id/txtWarred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="150dp"
        android:clickable="true"
        android:onClick="Buck"
        android:text=""
        android:textColor="@color/Yelow"
        android:textSize="38sp" />
    
</FrameLayout>

